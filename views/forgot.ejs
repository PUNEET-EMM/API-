<%- include('partials/header') %>
<div class="container mt-5">
    <h1>Forgot Password ?</h1>
    <h6>Enter your register email Id</h6>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            
            <form action="/forgot" method="POST">
              <div class="form-group">
                <label for="username">Enter your email</label>
                <input id="username" placeholder="Enter Your Email" class="form-control" name="email" type="text" />
              </div>
            
              <div class="form-group">
                <label for="password"> Password</label>
                <input type="password" placeholder="Enter New Password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark">Reset</button>
            </form>
  
          </div>
        </div>
      </div>
    </div>
  </div>






<%- include('partials/footer') %>